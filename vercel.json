{
    "version": 2,
    "crons": [
      {
        "path": "/api/automation/process-recurring",
        "schedule": "0 6 * * *"
      }
    ],
    "builds": [
      {
        "src": "src/server.js",
        "use": "@vercel/node"
      },
      {
        "src": "src/public/**/*",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "src/server.js"
      },
      {
        "src": "/auth/(.*)",
        "dest": "src/server.js"
      },
      {
        "src": "/js/(.*)",
        "dest": "src/public/js/$1"
      },
      {
        "src": "/(.+\\.(html|css|js|png|jpg|jpeg|gif|ico|svg))",
        "dest": "src/public/$1"
      },
      {
        "src": "/",
        "dest": "src/public/index.html"
      },
      {
        "src": "/(.*)",
        "dest": "src/server.js"
      }
    ]
  }